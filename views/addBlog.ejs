<!DOCTYPE html>
<html>

<head>
    <%- include('./partials/head') %>
        <title>Add Blog</title>
</head>

<body>
    <%- include('./partials/scripts') %>
        <!-- nav bar -->
        <%- include('./partials/header') %>
            <h1>ADD NEW BLOG</h1>
            <form method="post" action="/addblog" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="body">body</label>
                    <input type="body" class="form-control" name="body" id="body" placeholder="Enter body">
                </div>
                <div class="form-group">
                    <label for="coverImage">Upload Cover Image</label>
                    <input type="file" class="form-control" name="coverImage" id="coverImage">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
</body>

</html>