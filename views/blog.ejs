<!DOCTYPE html>
<html>

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/scripts') %>
        <!-- nav bar -->
        <%- include('./partials/header') %>

            <h1><%= locals.blog.title %></h1>
            <div>
                <img src="<%= locals.blog.coverImageURL%>" height="250">
                <p><%= locals.blog.body %></p>
            </div>
            <div>
                Author:
                <img src="<%= locals.blog.createdBy.profileImageUrl %>" width="50px" /> <%=locals.blog.createdBy.username %>
            </div>
            <br/>
            <div>
                <form action="/blog/comment/<%=locals.blog._id%>" method="post" >
                    <h4>Comments (<%=locals.comments.length%>)</h4>
                    <input type="text" placeholder="Comment" name="commentText" />
                    <input type="submit"/>
                </form>
                <% if(locals.comments.length > 0){ %>
                    <% locals.comments.forEach(comment => { %>
                        <div>
                            <img src="<%= comment.createdBy.profileImageUrl %>" width="45px" />
                            <%= comment.createdBy.username %>
                            <pre><%= comment.text %></pre>
                        </div>
                        <%})%>
                <%}%>
            </div>
</body>

</html>